{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
      "@/*": ["./src/*"],
      "app/*": ["./src/app/*"],
      "shared/*": ["./src/shared/*"],
      "screens/*": ["./src/screens/*"],
      "native/*": ["./src/native/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
